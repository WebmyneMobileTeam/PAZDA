<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"

    android:orientation="vertical"
    tools:context="com.xitij.adzap.ui.HomeScreen">

<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@drawable/list_selected2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtPersonName"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="#fff"
        android:text="view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtBankName"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#fff"
        android:text="view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtBranch"
        android:textSize="10sp"
        android:textColor="#fff"
        android:text="view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAccNo"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:textColor="#fff"
            android:text="view"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtACCType"
            android:textSize="10sp"
            android:textColor="#fff"
            android:text="view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/txtIFSC"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:textColor="#fff"
        android:text="view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtAdd"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:textColor="#fff"
        android:text="view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
