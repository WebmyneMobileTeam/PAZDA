<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    tools:context="com.xitij.adzap.ui.HomeScreen">
    <include
        layout="@layout/app_bar"/>

<ScrollView

    android:background="@drawable/square_backgroundcopy"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etBankName"
            android:drawablePadding="5dp"
            android:hint="Enter Bank name"
            android:textColorHint="@color/whiteColor"
            android:drawableLeft="@drawable/icon_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etBankBranchName"
            android:drawablePadding="5dp"
            android:hint="Enter Branch name"
            android:textColorHint="@color/whiteColor"
            android:drawableLeft="@drawable/ic_brachname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etAccNo"
            android:drawablePadding="5dp"
            android:hint="Enter Bank account number"
            android:textColorHint="@color/whiteColor"
            android:drawableLeft="@drawable/ic_action_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:text="Account Type"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Spinner

            android:layout_weight="1"
            android:id="@+id/spAccountType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></Spinner>
        </LinearLayout>


        <EditText
            android:id="@+id/etAccPersonName"
            android:drawablePadding="5dp"
            android:hint="Enter bank account holder name"
            android:textColorHint="@color/whiteColor"
            android:drawableLeft="@drawable/drawable_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etIFSCCode"
            android:drawablePadding="5dp"
            android:hint="Enter bank IFSC code"
            android:textColorHint="@color/whiteColor"
            android:drawableLeft="@drawable/ic_ifsccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etAddress"
            android:lines="5"
            android:drawablePadding="5dp"
            android:hint="Enter bank address"
            android:textColorHint="@color/whiteColor"
            android:drawableLeft="@drawable/ic_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtSave"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:padding="16dp"
            android:text="SAVE"
            android:textStyle="bold"
            android:background="@drawable/default_button_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>
</LinearLayout>
