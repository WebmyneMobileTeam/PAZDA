<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:orientation="vertical"
    tools:context="com.xitij.adzap.ui.HomeScreen">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>


        <LinearLayout

            android:background="@drawable/list_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAdName"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="#fff"
                android:text="My Heritage"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/txtCoins"

                android:background="@drawable/offer_darkbackground"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="#fff"
                android:text="+ 100"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />


          </LinearLayout>




    </LinearLayout>

</LinearLayout>
