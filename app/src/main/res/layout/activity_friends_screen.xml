<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context="com.xitij.adzap.ui.HomeScreen">

    <include
        layout="@layout/app_bar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="16sp"
            android:gravity="center"
            android:text="Share and Earn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/orangeColor"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Get 30%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:text=" of your friend's coins."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>


        <TextView
            android:id="@+id/txtFriend"
            android:drawableLeft="@drawable/ic_friends_invited"
            android:paddingLeft="16dp"
            android:drawablePadding="16dp"
            android:textColor="@color/whiteColor"
            android:background="@drawable/freinds_textview_background"
            android:textSize="18sp"
            android:gravity="left|center"
            android:text="Friend's Invited"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtCoins"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_coins"
            android:paddingLeft="16dp"
            android:drawablePadding="16dp"
            android:textColor="@color/whiteColor"
            android:background="@drawable/freinds_textview_background"
            android:textSize="18sp"
            android:gravity="left|center"
            android:text="Coins from friend's"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />



        <LinearLayout
            android:background="@drawable/freinds_view_background"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="16dp"
                android:background="@drawable/iconshare"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="16dp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Tap to Share your referral code with friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtRefCode"
                android:layout_marginBottom="16dp"
                android:background="#B7B8A2"
                android:padding="16dp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="123456ABC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/freinds_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

</LinearLayout>
