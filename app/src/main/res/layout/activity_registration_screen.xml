<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_bg"
    style="@style/match_parent">


    <TextView
        android:id="@+id/txtTop"
        android:padding="16dp"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:text="SIGN UP"
        android:layout_marginTop="30dp"
        android:background="@drawable/square_background"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />



    <ScrollView
        android:layout_above="@+id/txtBtnLogin"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTop"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/drawable_email"
                android:id="@+id/etEmail"
                style="@style/EditText_LoginScreen"
                android:hint="EMAIL" />

            <EditText

                android:maxLength="15"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/drawable_name"
                android:id="@+id/etName"
                style="@style/EditText_LoginScreen"
                android:hint="NAME" />

            <EditText
                android:maxLength="10"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/drawable_password"
                android:id="@+id/etPassword"
                style="@style/EditText_LoginScreen"
                android:inputType="textPassword"
                android:hint="PASSWORD" />

            <EditText
                android:maxLength="10"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/drawable_password"
                android:id="@+id/etCnfPassword"
                style="@style/EditText_LoginScreen"
                android:inputType="textPassword"
                android:hint="CONFIRM PASSWORD" />


            <EditText
                android:focusable="false"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/bdy"
                android:id="@+id/etDateofBirth"
                style="@style/EditText_LoginScreen"

                android:hint="BIRTH DAY" />

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:text="Select Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdMale"
                    android:text="Male"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdFemale"
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>


            <EditText
                android:maxLength="10"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/drawable_mobile"
                android:id="@+id/etPhone"
                style="@style/EditText_LoginScreen"
                android:hint="MOBILE" />

            <EditText
                android:maxLength="10"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColorHint="@color/whiteColor"
                android:textColor="@color/whiteColor"
                android:drawablePadding="5dp"
                android:background="@drawable/square_backgroundcopy"
                android:id="@+id/etReferalCode"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:padding="16dp"
                android:layout_height="wrap_content"
                android:hint="REFERAL CODE" />



        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/txtBtnLogin"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:text="REGISTER"
        android:textStyle="bold"
        android:background="@drawable/default_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>