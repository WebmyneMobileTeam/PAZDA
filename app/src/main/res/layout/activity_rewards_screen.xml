<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context="com.xitij.adzap.ui.HomeScreen">

    <LinearLayout
        android:layout_above="@+id/txtRedeem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar"/>

        <LinearLayout
            android:layout_margin="16dp"
            android:background="@drawable/square_backgroundcopy"
            android:id="@+id/linearList"

            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:padding="8dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:id="@+id/invoiceList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
            <include
                layout="@layout/redeem_emptyview"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/txtRedeem"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="16dp"
        android:text="REDEEM"
        android:textStyle="bold"
        android:background="@drawable/default_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
