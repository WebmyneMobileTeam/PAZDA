<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    tools:context="com.xitij.adzap.ui.HomeScreen">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/square_backgroundcopy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/earnCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView

            android:gravity="center"
            android:padding="4dp"
            android:textSize="18sp"
            android:text="You have recently earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:id="@+id/txtCoin"
                android:padding="4dp"
                android:textSize="18sp"
                android:text="50"
                android:textColor="@color/orangeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"
                android:text="coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <TextView

            android:gravity="center"
            android:padding="4dp"
            android:textSize="18sp"
            android:text="We have no offers currently available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="18sp"
            android:text="Visit back after some time for new offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>
