<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context="com.xitij.adzap.ui.HomeScreen">

    <TextView
        android:padding="16dp"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:text="VERIFICATION"
        android:layout_marginTop="30dp"
        android:background="@drawable/square_background"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:singleLine="true"
            android:maxLength="20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@color/whiteColor"
            android:textColor="@color/whiteColor"
            android:drawablePadding="5dp"
            android:background="@drawable/square_backgroundcopy"
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:hint="Verification Code" />



        <TextView
            android:id="@+id/txtBtnVerify"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="VERIFY"
            android:textStyle="bold"
            android:background="@drawable/default_button_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtResendCode"
            style="@style/normalGreyText"
            android:text="Resend verification code"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
             />

        <TextView
            android:id="@+id/txtNewSignup"
            style="@style/normalGreyText"
            android:text="New Sign up?"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>


</LinearLayout>
