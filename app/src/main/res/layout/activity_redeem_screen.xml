<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context="com.xitij.adzap.ui.HomeScreen">

    <LinearLayout
        android:layout_above="@+id/txtRedeem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        layout="@layout/app_bar"/>

    <LinearLayout
        android:background="@drawable/square_backgroundcopy"
        android:id="@+id/linearList"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Select Redeem Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/spRedeemMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:textColor="@color/whiteColor"
            android:layout_marginTop="16dp"
            android:id="@+id/txtSelectBank"
            android:layout_marginBottom="16dp"
            android:background="#B7B8A2"
            android:padding="16dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Select Bank details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearBankDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:id="@+id/txtBankName"
                android:textSize="14sp"
                android:text="State bank of india"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="16dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:id="@+id/txtAcc"
                android:textSize="14sp"
                android:text="100023587452"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/txtRedeem"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="16dp"
        android:text="REDEEM NOW"
        android:textStyle="bold"
        android:background="@drawable/default_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
