<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/primaryColor</item>
        </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="MyEdittext" parent="Widget.AppCompat.EditText">

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="MyTextView" parent="Base.Widget.AppCompat.EditText">

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fill_wrap_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_ll_ic" parent="@style/match_parent">
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="home_btn_big" parent="@style/match_parent">
        <item name="android:layout_margin">1.0dip</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="splashText" parent="fill_wrap_content">
        <item name="android:textSize">@dimen/big_txt</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="normalGreyText" parent="wrap_content">
        <item name="android:textSize">@dimen/normal_textsize</item>
        <item name="android:textColor">@color/app_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.6</item>

    </style>


    <style name="ImageHomeScreen" parent="wrap_content">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_height">@dimen/home_screen_icon</item>
        <item name="android:layout_width">@dimen/home_screen_icon</item>
    </style>

    <style name="EditText_LoginScreen" parent="fill_wrap_content">
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_margin">@dimen/normal_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>