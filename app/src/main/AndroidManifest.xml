<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xitij.adzap" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.LauncherActivity"
            android:label="@string/app_name" >


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name=".ui.HomeScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name=".ui.LoginScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>

        <activity
            android:name=".ui.SettingsScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>

        <activity
            android:name=".ui.LockScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".ui.VideoPlayer"
            android:label="@string/title_activity_home_screen" >
        </activity>

        <activity
            android:name=".ui.GetOffersScreen"
            android:label="@string/title_activity_home_screen" >

        </activity>




        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".ui.RegistrationScreen"
            android:label="@string/app_name" >


        </activity>

    </application>

</manifest>
